<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-12">

<h1>レストラン一覧</h1>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>店名</th>
      <th>電話番号</th>
      <th>住所</th>
      <th>ホームページ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @omises.each do |omise| %>
      <tr>
        <td><%= omise.name %></td>
        <td><%= omise.tel %></td>
        <td><%= omise.address %></td>
        <td><%= omise.homepage %></td>
        <td><%= link_to '口コミをみる', omise , class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'レストラン情報編集', edit_omise_path(omise) , class: "btn btn-success btn-xs"  %></td>
        <td><%= link_to '削除', omise, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-xs"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<div class="container">
<%= link_to '新規レストラン登録', new_omise_path %>
  </div>
  </div>
</div>
